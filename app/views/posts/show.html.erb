<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<h3>Actions:</h3>
<% if user_signed_in? %>
  <% if current_user.following?(@post) %>
    <%= render 'posts/unfollow_link' %>
  <% else %>
    <%= render 'posts/follow_link' %>
  <% end %>
<% end %>

<h2>Comments:</h2>
<ul>
  <% @post.comments.each do |comment| %>
    <li id="comment-<%= comment.id %>">
      <%= comment.content %>
    </li>
  <% end %>
</ul>

<h3>Add a Comment:</h3>
<%= render 'comments/form', comment: @comment %>

<h3>Users Who Follow This Post:</h3>
<ul>
  <% @post.followers.each do |follower| %>
    <li><%= follower.name %></li>
  <% end %>
</ul>
<% if policy(@post).update? %>
<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn--dark' %>
<% end %>
<%= link_to 'Back to Posts', posts_path, class: 'btn btn--light' %>
